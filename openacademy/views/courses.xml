<odoo>
    <record id="course_search_view" model="ir.ui.view">
        <field name="name">course.search</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <search string="Course">
                <field name="name" string="Course Name | Level" filter_domain="['|','|',('id','ilike',self),('name','ilike',self),('level','ilike',self)]"/>
                <separator/>
                <!-- <field string="Level" name="level"/> -->
                <separator/>
            </search>
        </field>
    </record>
        
    <record model="ir.ui.view" id="course_view_tree">
        <field name="name">course Template List</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="level" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="course_view_form">
        <field name="name">course Template Form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description" />
                        </group>
                        <group>
                            <field name="level" />
                        </group>
                    </group>
                    <field name="session_ids" nolabel="1">
                            <tree string="Course Session Items" editable="bottom">
                                <field name="name" />
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="session_view_tree">
        <field name="name">session Template List</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>
    
    <record model="ir.ui.view" id="session_view_form">
        <field name="name">session Template Form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>  
    
    <!-- Actions -->
    <record model="ir.actions.act_window" id="action_course">
      <field name="name">course Action</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="action_session">
      <field name="name">session Action</field>
      <field name="res_model">openacademy.session</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Courses and Sessions" id="menu_course_top" sequence="1" />
    <!-- actions -->
    <menuitem name="course" id="menu_course" parent="menu_course_top"
              action="action_course"/>
    <menuitem name="session" id="menu_session" parent="menu_course_top"
              action="action_session"/>

</odoo>
