<?xml version="1.0" ?>
<odoo>
    <data>

        <record model="ir.ui.view" id="book_view_list">
            <field name="name">book list</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="isbn" />
                    <field name="edition_date" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="book_view_form">
            <field name="name">book form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="isbn"/>
                            <field name="edition_date" />
                        </group>
                        <group>
                                <field name="copy_ids">
                                    <tree editable="bottom">
                                        <field name="bookcopyref"/>
                                    </tree>
                                </field>
                        </group>
                    </sheet>
                 </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_book">
            <field name="name">Books</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
        </record>        
                
        <!-- menu categories -->
        <menuitem name="Books" id="menu_book_top"/>
        <!-- actions -->
        <menuitem name="Courses" id="menu_book" parent="menu_book_top"
                            action="action_book"/>

    </data>

</odoo>